@page "/"

<div class="text-center">
    <h1 class="display-4">Guest Book</h1>
    <p>Please add a message!</p>
    <button class="btn btn-primary" @onclick="@(()=>ShowNewEntry())">Add Entry</button>
    <ul id="guest-list">
        @foreach (var guest in GuestList)
        {
            <li>@guest</li>
        }
    </ul>

    <p>Thank you for sharing this special day!</p>
</div>

@code {
        [CascadingParameter] public IModalService Modal { get; set; }
        public List<Guest> GuestList = new List<Guest>();

        async Task ShowNewEntry()
        {
            var formModal = Modal.Show<NewEntry>("New Entry");
            var result = await formModal.Result;

            if (result.Cancelled)
            {
                Console.WriteLine("Modal was cancelled.");
            }
            else
            {
                Console.WriteLine(result.Data); // This displays the newGuest object at the Console, needs to be on Home.razor
            }
        }
    }