@page "/NewEntry"

<div>
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" @bind=newName class="form-control" id="Name" placeholder="Enter your name" />
    </div>
    <div class="form-group">
        <label for="message">Message:</label>
        <textarea @bind=newMessage class="form-control" id="Message" placeholder="Enter your message"></textarea>
    </div>
    <div>
        <input type="submit" class="btn btn-primary" value="Submit" />
    </div>
</div>

@code {
        public static string newName { get; set; }
        public static string newMessage { get; set; }
        public static Guest GetGuest()
        {   
            Guest newGuest = new Guest()
            {
                GuestName = newName,
                GuestMessage = newMessage,
                GuestDateTime = DateTime.Now
            };
            return newGuest;
        }

        public List<Guest> AddToGuestList(List<Guest> GuestList, Guest newGuest)
        {
            GuestList.Add(newGuest);
            return GuestList;
        }
}